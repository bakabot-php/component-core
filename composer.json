{
    "name": "bakabot/core",
    "description": "Provides the core functionality and facilities of the bot.",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-pcntl": "*",
        "amphp/amp": "^2.5",
        "bakabot/attribute": "^1.1.2",
        "php-di/php-di": "^6.3",
        "psr/container": "^1.0",
        "psr/log": "^1.1",
        "spatie/emoji": "^2.2",
        "symfony/options-resolver": "^5.2",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "bakabot/development": "^1.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Bakabot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bakabot\\": "tests/"
        }
    },
    "config": {
        "lock": false,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
