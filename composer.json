{
    "name": "bakabot/component-core",
    "description": "Provides the core functionality and facilities of the bot.",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-intl": "*",
        "ext-pcntl": "*",
        "amphp/amp": "^2.6",
        "amphp/log": "^1",
        "amphp/react-adapter": "^2.1",
        "amphp/sync": "^1.4",
        "bakabot/attribute": "^2",
        "bakabot/component": "dev-main",
        "enqueue/enqueue": "^0.10.9",
        "evenement/evenement": "^3.0",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6",
        "spatie/emoji": "^2.2",
        "symfony/options-resolver": "^5.3",
        "symfony/translation": "^5.3",
        "symfony/twig-bridge": "^5.3",
        "twig/twig": "^3.3"
    },
    "require-dev": {
        "bakabot/development": "^2.0",
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "lock": false,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Bakabot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bakabot\\": "tests/"
        }
    }
}
